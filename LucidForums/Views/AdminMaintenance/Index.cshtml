@{
    ViewData["Title"] = "System Maintenance";
}

<div class="container mx-auto px-4 py-6 max-w-4xl">
    <h1 class="text-3xl font-bold mb-6">System Maintenance</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["SuccessMessage"]</span>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-error mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Search Index Status -->
    <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
            <h2 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                Semantic Search Index
            </h2>

            <div class="stats shadow mt-4">
                <div class="stat">
                    <div class="stat-title">Total Messages</div>
                    <div class="stat-value text-primary">@ViewBag.TotalMessages</div>
                    <div class="stat-desc">All messages in database</div>
                </div>

                <div class="stat">
                    <div class="stat-title">Indexed Messages</div>
                    <div class="stat-value text-secondary">@ViewBag.IndexedMessages</div>
                    <div class="stat-desc">Messages with embeddings</div>
                </div>

                <div class="stat">
                    <div class="stat-title">Coverage</div>
                    <div class="stat-value">@ViewBag.PercentageIndexed.ToString("F1")%</div>
                    <div class="stat-desc">
                        @if (ViewBag.PercentageIndexed >= 100)
                        {
                            <span class="text-success">Fully indexed</span>
                        }
                        else if (ViewBag.PercentageIndexed >= 50)
                        {
                            <span class="text-warning">Partially indexed</span>
                        }
                        else
                        {
                            <span class="text-error">Needs indexing</span>
                        }
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <progress class="progress progress-primary w-full" value="@ViewBag.IndexedMessages" max="@ViewBag.TotalMessages"></progress>
            </div>

            <div class="alert alert-info mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <h3 class="font-bold">About Semantic Search</h3>
                    <div class="text-sm">
                        Semantic search uses AI embeddings to find messages by meaning, not just keywords.
                        New messages are automatically indexed. Use this tool to index existing messages.
                    </div>
                </div>
            </div>

            <div class="card-actions justify-end mt-4">
                <form method="post" action="@Url.Action("IndexAllMessages")" id="indexForm">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-primary"
                            onclick="return confirm('This will index all messages and may take several minutes. Continue?')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        Index All Messages
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Danger Zone -->
    <div class="card bg-error text-error-content shadow-xl">
        <div class="card-body">
            <h2 class="card-title">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Danger Zone
            </h2>

            <p class="mb-4">
                Warning: The following action will permanently delete all forums, threads, messages, and search indexes.
                This cannot be undone!
            </p>

            <div class="card-actions justify-end">
                <form method="post" action="@Url.Action("ClearContent")" id="clearForm">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline"
                            onclick="return confirm('⚠️ WARNING: This will DELETE ALL content permanently!\n\nAre you absolutely sure you want to continue?')">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Clear All Content
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-6 text-center">
        <a href="@Url.Action("Index", "Admin")" class="btn btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Admin
        </a>
    </div>
</div>

<script>
    // Auto-refresh status every 10 seconds when on the page
    setInterval(async () => {
        try {
            const response = await fetch('@Url.Action("GetIndexingStatus")');
            const data = await response.json();

            // Update the stats (this could be more elegant with Alpine.js)
            console.log('Indexing status:', data);
        } catch (error) {
            console.error('Failed to fetch indexing status:', error);
        }
    }, 10000);
</script>
