@model LucidForums.Models.ViewModels.ForumDetailsVm
@{
    ViewData["Title"] = Model.Name;
}

<div class="prose-header">
    <div class="flex items-center justify-between gap-4">
        <div>
            <h1 class="text-3xl font-bold leading-tight">@Model.Name</h1>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="text-base-content/70 mt-1">@Model.Description</p>
            }
            <div class="mt-3 flex flex-col gap-2 text-sm">
                <div class="flex flex-wrap gap-2">
                    <span class="badge badge-outline">Threads: @Model.ThreadCount</span>
                    <span class="badge badge-ghost">Slug: @Model.Slug</span>
                </div>
                @if (Model.CharterId.HasValue || !string.IsNullOrWhiteSpace(Model.CharterName) || !string.IsNullOrWhiteSpace(Model.CharterPurpose))
                {
                    <div class="rounded-lg border border-base-300 p-3 bg-base-100/50">
                        <div class="flex items-start justify-between gap-2">
                            <div class="min-w-0">
                                <div class="font-medium">Charter: @(string.IsNullOrWhiteSpace(Model.CharterName) ? "(unnamed)" : Model.CharterName)</div>
                                @if (!string.IsNullOrWhiteSpace(Model.CharterPurpose))
                                {
                                    <div class="text-xs opacity-70 mt-1">@Model.CharterPurpose</div>
                                }
                            </div>
                            @if (Model.CharterId.HasValue)
                            {
                                <div class="shrink-0">
                                    <a class="btn btn-xs btn-ghost" href="@Url.Action("Details", "Charter", new { id = Model.CharterId!.Value })">View</a>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="shrink-0">
            <button class="btn btn-primary"
                    hx-get="@Url.Action("CreateThread", "Forum", new { forumId = Model.Id })"
                    hx-target="#create-thread"
                    hx-swap="innerHTML">
                + New Thread
            </button>
        </div>
    </div>
</div>

<div id="create-thread" class="mt-4"></div>

<div class="mt-6">
    <div class="flex items-center justify-between mb-2">
        <h2 class="text-xl font-semibold">Latest Threads</h2>
        <a class="link link-primary" href="/">Back to Home</a>
    </div>
    <div id="thread-list">
        @await Html.PartialAsync("_ThreadList", Model.Threads)
    </div>
</div>
