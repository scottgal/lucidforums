@model LucidForums.Models.ViewModels.CreateThreadVm
<div class="card bg-base-100 shadow-md">
    <div class="card-body">
        <h3 class="card-title">Create New Thread</h3>
        <form method="post"
              hx-post="@Url.Action("CreateThread", "Forum", new { forumId = Model.ForumId })"
              hx-target="#thread-list"
              hx-swap="afterbegin"
              hx-on::after-request="if(event.detail.successful) this.closest('.card').remove()">
            @Html.AntiForgeryToken()
            <div class="form-control mb-4">
                <label class="label">
                    <span class="label-text font-semibold">Title</span>
                </label>
                <input asp-for="Title" class="input input-bordered w-full" placeholder="Enter thread title..." />
                <label class="label">
                    <span asp-validation-for="Title" class="label-text-alt text-error"></span>
                </label>
            </div>
            <div class="form-control mb-4">
                <label class="label">
                    <span class="label-text font-semibold">Content</span>
                </label>
                <textarea asp-for="Content" class="textarea textarea-bordered w-full" rows="5" placeholder="What's on your mind?"></textarea>
                <label class="label">
                    <span asp-validation-for="Content" class="label-text-alt text-error"></span>
                </label>
            </div>
            <div class="card-actions justify-end">
                <button type="button" class="btn btn-ghost" onclick="this.closest('.card').remove()">Cancel</button>
                <button type="submit" class="btn btn-primary">Create Thread</button>
            </div>
        </form>
    </div>
</div>
