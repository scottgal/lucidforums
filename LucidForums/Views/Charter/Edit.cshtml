@model LucidForums.Models.ViewModels.CharterEditVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Charter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="link" href="/Charters/@Model.Id">← Back to details</a>
<h1 class="text-2xl font-bold mb-4">Edit Charter</h1>
<form asp-action="Edit" asp-controller="Charter" method="post">
    <partial name="_Form" model="Model" />
    <div class="mt-6">
        <button class="btn" type="submit">Save Changes</button>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}