@model LucidForums.Models.ViewModels.CharterDetailsVm
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Charter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="link" href="/Charters/@Model.Id">← Back to details</a>
<h1 class="text-2xl font-bold mb-4">Delete Charter</h1>
<div class="mb-4 p-4 bg-red-50 border border-red-200 text-red-800">
    Are you sure you want to delete the charter <strong>@Model.Name</strong>?
</div>
<form asp-action="Delete" asp-controller="Charter" method="post">
    <button class="btn bg-red-600 text-white" type="submit">Confirm Delete</button>
    <a class="btn" href="/Charters/@Model.Id">Cancel</a>
</form>