@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Sample forum data (replace with real data later)
    var forums = new[]
    {
        new { Name = "Dream Journals", Description = "Share last night's adventures and read others' vivid tales.", Topics = 842, Posts = 12567, Color = "from-pink-300 to-rose-300" },
        new { Name = "Techniques & Tips", Description = "Reality checks, WILD, MILD, and all the tricks to get lucid.", Topics = 432, Posts = 8041, Color = "from-sky-300 to-cyan-300" },
        new { Name = "Beginners' Lounge", Description = "New here? Start your lucid journey with friendly guidance.", Topics = 655, Posts = 9870, Color = "from-emerald-300 to-lime-300" },
        new { Name = "Sleep & Wellness", Description = "Better sleep, mindful rest, and healthy routines.", Topics = 271, Posts = 4482, Color = "from-amber-300 to-yellow-300" },
        new { Name = "Creative Corner", Description = "Art, music, and stories inspired by the dream world.", Topics = 193, Posts = 2620, Color = "from-violet-300 to-fuchsia-300" },
        new { Name = "Off-Topic Café", Description = "Chill spot for friendly banter and good vibes.", Topics = 501, Posts = 7362, Color = "from-indigo-300 to-blue-300" }
    };
}

<section class="flex flex-col gap-8 animate-slide-in">
    <div class="hero bg-base-100 rounded-box shadow-sm">
        <div class="hero-content text-center">
            <div class="max-w-2xl">
                <h1 class="text-4xl sm:text-5xl font-extrabold">Welcome to <span class="text-primary">LucidForums</span> ✨</h1>
                <p class="py-4 text-base-content/70">
                    A cozy, friendly place to explore lucid dreaming, swap tips, and share your dream adventures.
                </p>
                <div class="join">
                    <a class="btn btn-primary join-item">Get Started</a>
                    <a class="btn btn-outline join-item" href="#forums">Browse Forums</a>
                </div>
            </div>
        </div>
    </div>

    <div id="forums" class="flex items-center justify-between">
        <h2 class="text-2xl font-bold">Forums</h2>
        <div class="form-control">
            <label class="input input-bordered flex items-center gap-2 w-64">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" viewBox="0 0 24 24" fill="currentColor"><path d="M21.707 20.293l-5.657-5.657A7.963 7.963 0 0018 10a8 8 0 10-8 8 7.963 7.963 0 004.636-1.95l5.657 5.657a1 1 0 001.414-1.414zM4 10a6 6 0 1112 0 6 6 0 01-12 0z"/></svg>
                <input type="text" class="grow" placeholder="Search forums" />
            </label>
        </div>
    </div>

    <div class="grid gap-4 sm:gap-6 grid-cols-1 md:grid-cols-2 xl:grid-cols-3">
        @foreach (var f in forums)
        {
            <a class="card bg-base-100 hover:shadow-xl transition-shadow border border-base-300">
                <div class="card-body">
                    <div class="flex items-start justify-between gap-3">
                        <div>
                            <h3 class="card-title">@f.Name</h3>
                            <p class="text-base-content/70 mt-1">@f.Description</p>
                        </div>
                        <div class="badge badge-lg bg-gradient-to-br @f.Color text-base-100 border-none">Active</div>
                    </div>
                    <div class="card-actions mt-4 text-sm text-base-content/70">
                        <div class="badge badge-outline">@f.Topics topics</div>
                        <div class="badge badge-outline">@f.Posts posts</div>
                        <button class="btn btn-sm btn-primary ml-auto">Enter</button>
                    </div>
                </div>
            </a>
        }
    </div>

    <div class="mt-6 p-4 rounded-box bg-base-100 border border-dashed border-base-300 text-sm text-base-content/70">
        Tip: Use the search box to find techniques like WILD, MILD, or reality checks.
    </div>
</section>
