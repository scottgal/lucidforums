{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=lucidforums;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Information",
      "System": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/dev-app-.log",
          "rollingInterval": "Day",
          "shared": true
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Service": {
    "Name": "LucidForums (Dev)",
    "Version": "1.0.0-dev"
  },
  "Otlp": {
    "Endpoint": "http://localhost:17011"
  },

  "AI": {
    "Provider": "Ollama",
    "DefaultModel": "llama3.1:8b",
    "Temperature": 0.5,
    "MaxTokens": 512
  },
  "Ollama": {
    "Endpoint": "http://localhost:11434",
    "DefaultModel": "llama3.1:8b",
    "Temperature": 0.2,
    "MaxTokens": 512,
    "Timeout": "00:01:00"
  },
  "Embedding": {
    "Model": "mxbai-embed-large",
    "Provider": "ollama"
  },
  "Translation": {
    "Provider": "easynmt",
    "EasyNmt": {
      "Endpoint": "http://localhost:24080/"
    }
  },
  "Jwt": {
    "SecretKey": "ThisIsADevelopmentSecretKeyPleaseChangeInProduction12345678",
    "Issuer": "LucidForums",
    "Audience": "LucidForumsAPI",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  }
}
