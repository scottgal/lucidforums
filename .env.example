# Copy this file to .env and adjust values as needed
# Docker Compose will read .env automatically from the project root

# Postgres
POSTGRES_DB=lucidforums
POSTGRES_USER=lucid
POSTGRES_PASSWORD=lucidpassword

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Application configuration
# Connection string the app will use inside Docker network
ConnectionStrings__Default=Host=db;Port=5432;Database=lucidforums;Username=lucid;Password=lucidpassword

# Ollama service endpoint (internal)
OLLAMA_ENDPOINT=http://ollama:11434

# Optional: pre-pull a small model after starting Ollama
# You can run: docker compose run --rm ollama ollama pull llama3.2:1b
